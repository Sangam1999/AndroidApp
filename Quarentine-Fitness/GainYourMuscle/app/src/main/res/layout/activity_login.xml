<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/dumbell"
    tools:context=".LoginActivity">

    <!--TEXTVIEW: Label LOGIN-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/aclonica"
        android:text="Quarentine Fitness"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#DCD2D2"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!--EDITTEXT: input email-->

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColor="#302C2C" />

    <!--EDITTEXT: input password-->

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:textColor="#302C2C" />


    <!--BUTTON: login User-->
    <Button
        android:id="@+id/loginBtn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/passwordEt"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOG IN" />


    <!--TEXT VIEW : Show Dialog to recover password-->

    <TextView
        android:id="@+id/recoverPassTv"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?Recover"
        android:textAlignment="center" />

    <!--GoogleSignInBtn: Google Sign in with google account-->

    <!--TEXT VIEW : GO TO REGISTER ACTIVITY-->


    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center" />

    <TextView
        android:id="@+id/nothave_accountTv"
        android:layout_marginTop="25sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Does not have an account? Sign Up" />

</LinearLayout>